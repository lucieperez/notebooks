digraph motion_tree {
	fontsize=12 rankdir=TB
	node [fontsize=11 shape=box style=rounded]
	edge [fontsize=10]
	N1 [label="Node 1: Path/Goal configuration present or inferable?"]
	A [label="Exit A: Not motion" fillcolor=lightgray shape=oval style=filled]
	N2 [label="Node 2: Actual displacement of a Figure relative to external frame?"]
	B [label="Exit B: FACTIVE motion" fillcolor=lightblue shape=oval style=filled]
	N3 [label="Node 3: Dynamic scanning / imagined motion in cognition?"]
	C [label="Exit C: Not motion
(change-of-state / abstract metaphor)" fillcolor=lightgray shape=oval style=filled]
	D [label="Exit D: FICTIVE motion subtype" fillcolor=lightyellow shape=oval style=filled]
	N4 [label="Subtype: Stationary extended entity traversed?
(road/border/river/wall...)"]
	S1 [label="FICTIVE: Coextension path" fillcolor=lightyellow shape=oval style=filled]
	N5 [label="Subtype: Orientation implies vector?
(face/point toward...)"]
	S2 [label="FICTIVE: Orientation path" fillcolor=lightyellow shape=oval style=filled]
	N6 [label="Subtype: Emanation/transmission?
(sound/light/gaze/odor)"]
	S3 [label="FICTIVE: Emanation (radiation) path" fillcolor=lightyellow shape=oval style=filled]
	N7 [label="Subtype: Observer-based apparent motion?"]
	S4 [label="FICTIVE: Observer-based" fillcolor=lightyellow shape=oval style=filled]
	N8 [label="Subtype: Abstract Figure, no spatial support?"]
	S5 [label="Metaphorical motion
(or cline: high metaphoricity)" fillcolor=wheat shape=oval style=filled]
	N1 -> A [label=No]
	N1 -> N2 [label=Yes]
	N2 -> B [label=Yes]
	N2 -> N3 [label=No]
	N3 -> C [label=No]
	N3 -> N4 [label=Yes]
	N4 -> S1 [label=Yes]
	N4 -> N5 [label=No]
	N5 -> S2 [label=Yes]
	N5 -> N6 [label=No]
	N6 -> S3 [label=Yes]
	N6 -> N7 [label=No]
	N7 -> S4 [label=Yes]
	N7 -> N8 [label=No]
	N8 -> S5 [label=Yes]
	N8 -> D [label="No / other"]
}
